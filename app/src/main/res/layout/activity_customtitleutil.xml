<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7f7f7">



    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/cv_avatar"
            android:layout_width="64px"
            android:layout_height="64px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="70px"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="45px"
            android:layout_marginTop="15px"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_doctorname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:textSize="32px"
                />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:hint="最低预约10分钟"
                />

        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="70px"  />
    </com.zhy.autolayout.AutoLinearLayout>



   <com.zhy.autolayout.AutoLinearLayout
       android:layout_width="match_parent"
       android:layout_height="300px"
       android:layout_marginTop="30px"
       android:background="#ffffff"
       android:orientation="vertical">

       <com.zhy.autolayout.AutoRelativeLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45px"
            android:textSize="32px"
            />

           <EditText
               android:id="@+id/edt_phone"
               android:layout_width="wrap_content"
               android:minWidth="250px"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_marginRight="50px"
               android:hint="请输入您的手机号码"
               android:background="#0000"
               android:textSize="30px"
               android:inputType="number"
               android:maxLength="11"
               />
       </com.zhy.autolayout.AutoRelativeLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="1px"
           android:layout_marginLeft="45px"
           android:layout_marginRight="45px"/>
       <com.zhy.autolayout.AutoRelativeLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginLeft="45px"
               android:textSize="32px"
             />
           <com.zhy.autolayout.AutoLinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginRight="50px"
               android:layout_centerVertical="true"
             >
               <ImageView
                   android:id="@+id/iv_reduce"
                   android:layout_width="80px"
                   android:layout_height="80px"
                   android:padding="20px"
                   />
               <View
                   android:layout_width="1px"
                   android:layout_height="match_parent"
                  />
               <EditText
                   android:id="@+id/edt_time"
                   android:layout_width="80px"
                   android:layout_height="80px"
                   android:gravity="center"
                   android:textSize="28px"
                   android:background="#0000"
                   android:inputType="number"
                   android:text="10"
                   />
               <View
                   android:layout_width="1px"
                   android:layout_height="match_parent"
                   />
               <ImageView
                   android:id="@+id/iv_add"
                   android:layout_width="80px"
                   android:layout_height="80px"
                   android:padding="20px"
              />
           </com.zhy.autolayout.AutoLinearLayout>
       </com.zhy.autolayout.AutoRelativeLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="1px"
           android:layout_marginLeft="45px"
           android:layout_marginRight="45px"/>
       <com.zhy.autolayout.AutoRelativeLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginLeft="45px"
               android:textSize="32px"
             />
           <com.zhy.autolayout.AutoLinearLayout
               android:id="@+id/ll_date_select"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true">
               <TextView
                   android:id="@+id/tv_date"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:layout_marginLeft="45px"
                   android:textSize="30px"
                   android:hint="请选择预约时间"
                   android:gravity="center"
                  />

               <ImageView
                   android:layout_width="36px"
                   android:layout_height="36px"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="45px"
                   android:layout_marginLeft="45px"/>
           </com.zhy.autolayout.AutoLinearLayout>

       </com.zhy.autolayout.AutoRelativeLayout>

   </com.zhy.autolayout.AutoLinearLayout>




    <!--优惠券与支付-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:layout_marginTop="30px"
        android:background="#ffffff"
        android:orientation="vertical">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45px"
                android:layout_centerVertical="true"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_coupons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45px">
                <TextView
                    android:id="@+id/tv_coupons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="未使用优惠券"
                  />
                <ImageView
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:layout_marginLeft="45px"
                 />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="45px"
            android:layout_marginRight="45px"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45px"
                android:layout_centerVertical="true"
               />

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60px"
                android:layout_centerVertical="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="45px"
            android:layout_marginRight="45px"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/label_current_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45px"
                android:layout_centerVertical="true"
               />

            <TextView
                android:id="@+id/tv_current_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/label_current_balance"
                android:layout_marginLeft="50px"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_balance_diff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_current_balance"
                android:layout_marginLeft="50px"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_charge"
                android:layout_width="120px"
                android:layout_height="64px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50px"
                android:text="充值"
                android:textColor="@color/colorAccent"
                android:gravity="center"/>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="45px"
        android:paddingRight="45px"
        android:layout_marginTop="45px"
        />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_marginLeft="45px"
        android:layout_marginRight="45px"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="32px"
        android:layout_marginBottom="30px"/>

</com.zhy.autolayout.AutoLinearLayout>