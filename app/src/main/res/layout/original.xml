<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.dylan.mylibrary.widget.CarouselView
        android:id="@+id/cv_top"
        android:layout_width="match_parent"
        android:layout_height="360px" />

    <!--标签栏-->
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/id_tab_indicatorlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.dylan.library.widget.tab.HorizontalScrollTabLayout
            android:id="@+id/tl_common_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="45px"
            android:layout_marginRight="45px"
            android:elevation="5px" />
    </com.zhy.autolayout.AutoLinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_containner"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</com.zhy.autolayout.AutoLinearLayout>