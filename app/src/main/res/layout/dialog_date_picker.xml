<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.dylan.library.widget.shape.ShapeLinearLayout
        android:layout_width="360dp"
        android:layout_height="380dp"
        android:orientation="vertical"
        app:radius="10dp"
        app:solidColor="#ffffff">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="27dp"
            android:gravity="center_vertical">
            
            <ImageView
                android:id="@+id/ivLastMonth"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@mipmap/icon_left_arrow_black"
                android:layout_marginRight="59dp"/>

            <TextView
                android:id="@+id/tvYearMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff333333"
                android:textSize="18sp"
                />

            <ImageView
                android:id="@+id/ivNextMonth"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@mipmap/icon_right_arrow_black"
                android:layout_marginLeft="59dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="15dp">

            <com.flyco.tablayout.widget.MediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="日"
                android:textColor="#333333"
                android:textSize="12sp"
                app:textBold="0.8" />

            <com.flyco.tablayout.widget.MediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="一"
                android:textColor="#333333"
                android:textSize="12sp"
                app:textBold="0.8" />

            <com.flyco.tablayout.widget.MediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="二"
                android:textColor="#333333"
                android:textSize="12sp"
                app:textBold="0.8" />

            <com.flyco.tablayout.widget.MediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="三"
                android:textColor="#333333"
                android:textSize="12sp"
                app:textBold="0.8" />

            <com.flyco.tablayout.widget.MediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="四"
                android:textColor="#333333"
                android:textSize="12sp"
                app:textBold="0.8" />

            <com.flyco.tablayout.widget.MediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="五"
                android:textColor="#333333"
                android:textSize="12sp"
                app:textBold="0.8" />

            <com.flyco.tablayout.widget.MediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="六"
                android:textColor="#333333"
                android:textSize="12sp"
                app:textBold="0.8" />
        </LinearLayout>

        <com.dylan.library.widget.AutoGridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="7" />
    </com.dylan.library.widget.shape.ShapeLinearLayout>
</LinearLayout>