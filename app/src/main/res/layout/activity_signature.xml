<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.dylan.library.widget.shape.ShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="751dp"
            android:orientation="vertical"
            app:solidColor="#FFFFFF"
            app:radius="9dp">

            <com.flyco.tablayout.widget.MediumTextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:paddingLeft="17dp"
                android:text="同意协议"
                android:textColor="#ff000000"
                android:textSize="15sp"
                app:textBold="0.6" />

            <com.dylan.library.widget.shape.ShapeLinearLayout
                android:layout_width="match_parent"
                android:layout_height="244dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                app:radius="1dp"
                app:strokeColor="#E3E3E3"
                app:strokeWidth="3dp">

                <android.webkit.WebView
                    android:id="@+id/webView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="9dp" />

            </com.dylan.library.widget.shape.ShapeLinearLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <com.flyco.tablayout.widget.MediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="17dp"
                    android:text="手写签名"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    app:textBold="0.6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="*"
                    android:textColor="#FF0000 "
                    android:textSize="15sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

                <com.dylan.library.widget.shape.ShapeTextView
                    android:id="@+id/btnClear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    app:startColor="#822FE1"
                    app:endColor="#0A62FE"
                    app:radius="4dp"
                    android:text="清除"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="#ffffff"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.dylan.library.widget.SignatureView
                android:id="@+id/signView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#EFEFEF"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <com.dylan.library.widget.shape.ShapeTextView
                    android:id="@+id/tvCancel"
                    android:layout_width="131dp"
                    android:layout_height="44dp"
                    app:strokeColor="#B83B93"
                    app:strokeWidth="1dp"
                    app:radius="22dp"
                    android:text="取消"
                    android:textColor="#B83B93"
                    android:gravity="center"/>


                <com.dylan.library.widget.shape.ShapeTextView
                    android:id="@+id/tvConfirm"
                    android:layout_width="131dp"
                    android:layout_height="44dp"
                    app:startColor="#822FE1"
                    app:endColor="#0A62FE"
                    app:radius="22dp"
                    android:text="确认开播"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_marginLeft="17dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.dylan.library.widget.shape.ShapeLinearLayout>

    </LinearLayout>
</LinearLayout>