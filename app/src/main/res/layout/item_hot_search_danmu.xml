<?xml version="1.0" encoding="utf-8"?>
<com.dylan.library.widget.shape.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="64dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:solidColor="#333333"
    app:shapeAlpha="0.2"
    app:radius="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/ivPlatformLogo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/tvFromSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            android:layout_toRightOf="@id/ivPlatformLogo"
            android:layout_marginLeft="8dp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="热搜内容热搜内容热搜内容热搜内容热搜内容"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        />


</com.dylan.library.widget.shape.ShapeLinearLayout>