<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:redpoint="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.dylan.library.widget.RedPointTextView
        android:id="@+id/redText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="8dp"
        redpoint:redPointSize="6dp" />

    <com.dylan.library.widget.RedPointTextView
        android:id="@+id/redText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingRight="8dp"
        redpoint:pointColor="#a0a0a0"
        redpoint:redPointSize="6dp" />


    <com.dylan.library.widget.RedPointTextView
        android:id="@+id/redText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingRight="8dp"
        redpoint:redPointSize="6dp" />
</LinearLayout>