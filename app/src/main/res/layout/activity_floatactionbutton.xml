<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FloatActionButtonDemoActivity">

    <FrameLayout
        android:id="@+id/layout_brc"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.dylan.library.widget.floataction.FloatActionMenu
            android:id="@+id/left"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_margin="30dp"
            android:background="#00000000"
            app:duration="200"
            app:spreadDirection="spread_bottom"
            app:viewOffset="20dp">

        </com.dylan.library.widget.floataction.FloatActionMenu>

        <com.dylan.library.widget.floataction.FloatActionMenu
            android:id="@+id/right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_margin="30dp"
            android:background="#00000000"
            app:duration="200"
            app:spreadDirection="spread_left"
            app:viewOffset="20dp">

        </com.dylan.library.widget.floataction.FloatActionMenu>

        <com.dylan.library.widget.floataction.FloatActionMenu
            android:id="@+id/bottom_left"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left|bottom"
            android:layout_margin="30dp"
            android:background="#00000000"
            app:duration="200"
            app:spreadDirection="spread_right"
            app:viewOffset="20dp">

        </com.dylan.library.widget.floataction.FloatActionMenu>

        <com.dylan.library.widget.floataction.FloatActionMenu
            android:id="@+id/bottom_right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right|bottom"
            android:layout_margin="30dp"
            android:background="#00000000"
            app:duration="200"
            app:spreadDirection="spread_up"
            app:viewOffset="20dp">

        </com.dylan.library.widget.floataction.FloatActionMenu>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>